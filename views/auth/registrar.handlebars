<div class="auth-container">
    <h2>Registrar</h2>
    <form action="/registrar" method="POST">
        <div class="form-control">
            <input type="text" name="nome" placeholder="Nome" maxlength="30" required>
        </div>
        <div class="form-control">
            <input type="email" name="email" placeholder="Email" maxlength="40" required>
        </div>
        <div class="form-control">
            <input type="password" name="senha" placeholder="Senha" maxlength="15" required>
        </div>
        <div class="form-control">
            <input type="password" name="confSenha" placeholder="Confirmação Senha" required>
        </div>
        <div class="form-control">
            <input type="submit" value="Registrar">
        </div>
        <p>Já tem conta? <a href="/login">Clique aqui!</a></p>
    </form>
</div>